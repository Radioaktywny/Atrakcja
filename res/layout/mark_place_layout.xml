<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical" >

    <!-- Screen Design for the SONGS -->

    <EditText
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="152dp"
        android:ems="10"
        android:hint="Opis miejsca" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/nazwa_miejsca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="246dp"
        android:ems="10"
        android:hint="Nazwa Miejsca" />

    <Button
        android:id="@+id/zdjecie"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_x="176dp"
        android:layout_y="84dp"
        android:background="@drawable/tlo_obrazka"
        android:minWidth="130dp"
        android:text="@string/zdjecie"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_x="92dp"
        android:layout_y="0dp"
        android:padding="15dip"
        android:text="oznacz"
        android:textSize="28sp" />

    <Button
        android:id="@+id/oznacz"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_marginRight="58dp"
        android:layout_x="171dp"
        android:layout_y="367dp"
        android:background="@drawable/tlo_obrazka"
        android:minWidth="130dp"
        android:onClick="oznacz"
        android:text="@string/oznacz"
        android:textColor="#FFFFFF" />

</AbsoluteLayout>